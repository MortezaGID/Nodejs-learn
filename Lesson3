const 
request = require('request'),
fs = require('fs'),

Options = {
    method : 'POST',
    url     : 'https://api.telegram.org/bot------------Token--------------/sendPhoto',
    body    : {
        chat_id : -----chat_id----- ,
        caption : 'ُSalam 🖐',
